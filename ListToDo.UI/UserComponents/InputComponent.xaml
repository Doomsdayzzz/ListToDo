<UserControl x:Class="ListToDo.InputComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Component"
             xmlns:local="clr-namespace:ListToDo">
    <UserControl.Resources>
        <ResourceDictionary Source="/Styles.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="LabelInput" Target="Input" FontSize="16" HorizontalAlignment="Right"
               Content="{Binding ElementName=Component, Path=LabelText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        <ToggleButton Grid.Column="1" x:Name="Toggle1" Style="{StaticResource Toggle1}"
                      IsChecked="{Binding ElementName=Component, Path=Is_Checked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <!-- Visibility="{Binding ElementName=Component, Path=isVis}"/> -->

        <TextBox Grid.Column="2" x:Name="Input" Margin="10 0" Height="20"
                 Text="{Binding ElementName=Component, Path=InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>

</UserControl>