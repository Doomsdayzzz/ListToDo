<UserControl x:Class="ListToDo.InputPriorityComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ListToDo"
             mc:Ignorable="d"
             x:Name="Component">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="LabelInput" Target="InputPriority" FontSize="16" HorizontalAlignment="Right"/>
        <!--<TextBox Grid.Column="1" x:Name="Input" Margin="10 0" Height="20"/>-->
        <ComboBox Grid.Column="1" x:Name="InputPriority"  Margin="10 0" Height="20"
                  SelectionChanged="Input_OnSelectionChanged"
                  SelectedItem="{Binding ElementName=Component, 
                  Path=PriorityTask, 
                  Mode=TwoWay, 
                  UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
