<UserControl x:Class="ListToDo.Views.SearchTask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListToDo"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/Styles.xaml"/>
        
    </UserControl.Resources>
    <StackPanel VerticalAlignment="Top">
        <TextBlock Text="Поиск" FontSize="20" Margin="20 10" TextAlignment="Center"/>
        <Label Content="Введите искомые данные" HorizontalAlignment="Center"/>
        <local:InputComponent x:Name="NameSearchTask" LabelText="Название" Margin="10 5"
                              InputText="{Binding InputNameSearchTask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <local:InputComponent x:Name="DescriptionSearchTask" LabelText="Описание" Margin="10 5"
                              InputText="{Binding InputDescriptionSearchTask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <local:InputDateComponent x:Name="DateSearchTask" LabelText="Дата исполнения " Margin="10 5"
                                  DateTask="{Binding InputSearchDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <local:InputPriorityComponent x:Name="NewPriority" LabelText="Приоритет" Margin="10 5"
                                      PriorityTask="{Binding InputSearchPriority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Поиск" Command="{Binding SearchTaskCommand, Mode=OneTime}"
                Width="70" Height="20" Margin="0,20,0,0"/>
        
        <!--<ListView Name="ListSearchRezult" ItemsSource="{Binding SearchRezultTasks}"/>-->
        
        <ListView x:Name="ListSearchRezult" 
                  ItemsSource="{Binding SearchRezultTasks, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                  Margin="15">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="    Название    " DisplayMemberBinding="{Binding NameTask}"/>
                    <GridViewColumn Header="     Описание    " DisplayMemberBinding="{Binding DescriptionTask}"/>
                    <GridViewColumn Header=" Дата исполнения " DisplayMemberBinding="{Binding DueDate}"/>
                    <GridViewColumn Header=" Приоритет " DisplayMemberBinding="{Binding PriorityTask}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
